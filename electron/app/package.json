{
  "name": "beepmyphone-electron",
  "version": "1.0.0",
  "description": "BeepMyPhone Electron desktop application",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && cross-env NODE_ENV=development electron .",
    "build": "tsc",
    "start": "electron dist/main.js",
    "pack": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.beepmyphone.app",
    "productName": "BeepMyPhone",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ]
  }
}
